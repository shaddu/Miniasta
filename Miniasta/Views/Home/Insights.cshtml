<h3>@ViewBag.Message</h3>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4>You are following</h4>
            <ul class="list-group">
                @foreach (var user in ViewBag.follows.Miniasta)
                {
                    <li class="list-group-item list-dec">
                        <span class="pull-left">
                            <img class="profilepic" src=@user.profile_picture alt=@user.username />
                        </span>
                        @user.username
                    </li>
                }
            </ul>
        </div>
        <div class="col-sm-4">
            <h4>You are followed by</h4>
            <ul class="list-group">
                @foreach (var user in ViewBag.follower.Miniasta)
                {
                    <li class="list-group-item list-dec">
                        <span class="pull-left">
                            <img class ="profilepic" src=@user.profile_picture alt=@user.username />
                        </span>
                        @user.username
                    </li>
                }
            </ul>
         </div>
         <div class="col-sm-4">
             <h4>You are requested by</h4>
             <ul class="list-group">
                 @foreach (var user in ViewBag.follower.Miniasta)
                 {
                     <li class="list-group-item list-dec">
                         <span class="pull-left">
                            <img class="profilepic" src=@user.profile_picture alt=@user.username />
                         </span>
                         @user.username
                     </li>
                 }
             </ul>
         </div>
        </div>
  </div>
